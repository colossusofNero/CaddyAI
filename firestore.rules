rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function: Check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Favorite Courses Collection
    // Document ID format: {userId}_{courseId}
    match /favoriteCourses/{docId} {
      // Allow read if user is authenticated and owns the document
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;

      // Allow create if user is authenticated and creating their own favorite
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['userId', 'courseId', 'courseName', 'location', 'addedAt'])
        && request.resource.data.userId is string
        && request.resource.data.courseId is string
        && request.resource.data.courseName is string
        && request.resource.data.location is string
        && request.resource.data.addedAt is string;

      // Allow update if user owns the document
      allow update: if isSignedIn()
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId; // Prevent userId changes

      // Allow delete if user owns the document
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Active Rounds Collection
    // Document ID is the userId
    match /activeRounds/{userId} {
      // Allow read if user is accessing their own round
      allow read: if isOwner(userId);

      // Allow create if user is creating their own round
      allow create: if isOwner(userId)
        && request.resource.data.userId == userId
        && request.resource.data.keys().hasAll(['userId', 'courseId', 'courseName', 'currentHole', 'startedAt', 'holes'])
        && request.resource.data.currentHole is int
        && request.resource.data.currentHole >= 1
        && request.resource.data.currentHole <= 18;

      // Allow update if user owns the round
      allow update: if isOwner(userId)
        && request.resource.data.userId == resource.data.userId // Prevent userId changes
        && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId'])); // Prevent userId modification

      // Allow delete if user owns the round
      allow delete: if isOwner(userId);
    }

    // Clubs Collection (unified schema - document per user)
    // Document ID is the userId, contains array of clubs
    match /clubs/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Shots Collection (unified schema - document per user)
    // Document ID is the userId, contains array of shots
    match /shots/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Profiles Collection (unified schema)
    // Document ID is the userId
    match /profiles/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Preferences Collection (unified schema)
    // Document ID is the userId
    match /preferences/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // ============================================================================
    // RECOMMENDATION TRACKING (New System)
    // ============================================================================

    // Recommendation Events: /recommendations/{userId}/events/{eventId}
    match /recommendations/{userId}/events/{eventId} {
      // Users can read their own recommendations
      allow read: if isOwner(userId);

      // Users can create their own recommendations
      allow create: if isOwner(userId)
                    && request.resource.data.userId == userId
                    && request.resource.data.timestamp is timestamp
                    && request.resource.data.source in ['optimizer-button', 'ai-agent', 'manual'];

      // Users can update their own recommendations (for decisions and outcomes)
      allow update: if isOwner(userId)
                    && resource.data.userId == userId
                    && request.resource.data.userId == userId; // Can't change userId

      // Users can delete their own recommendations
      allow delete: if isOwner(userId);
    }

    // Recommendation Stats: /recommendations/{userId}/meta/stats
    match /recommendations/{userId}/meta/stats {
      // Users can read their own stats
      allow read: if isOwner(userId);

      // Users can write their own stats (updated by service)
      allow write: if isOwner(userId);
    }

    // ============================================================================
    // UNIFIED SCORES COLLECTION (Mobile + Web)
    // ============================================================================

    // Scores: /scores/{scoreId} - Unified collection for all rounds
    match /scores/{scoreId} {
      // Users can read their own scores
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;

      // Users can create scores with their own userId
      allow create: if isSignedIn()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.createdAt is timestamp
                    && request.resource.data.roundType in ['18', '9-front', '9-back'];

      // Users can update their own scores
      allow update: if isSignedIn()
                    && resource.data.userId == request.auth.uid
                    && request.resource.data.userId == request.auth.uid; // Can't change userId

      // Users can delete their own scores
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // ============================================================================
    // LEGACY ROUNDS COLLECTION (Kept for backward compatibility)
    // ============================================================================

    // Rounds Collection (DEPRECATED - Use /scores instead)
    // Kept for reading legacy data
    match /rounds/{roundId} {
      // Users can read their own rounds
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;

      // Allow create for backward compatibility
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAny(['userId', 'date'])
        && request.resource.data.userId is string;

      allow update: if isSignedIn()
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId;

      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // User Profiles Collection (shared across platforms)
    match /userProfiles/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Club Management Collection (shared across platforms)
    match /clubDistances/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Courses Collection - Public read access
    match /courses/{courseId} {
      // Anyone can read course data (public information)
      allow read: if true;

      // Only admins can write (implement admin check in production)
      allow write: if false;
    }

    // Course Holes Collection - Public read access
    match /courseHoles/{holeId} {
      // Anyone can read hole data (public information)
      allow read: if true;

      // Only admins can write
      allow write: if false;
    }

    // Course Favorites Collection
    // Document ID format: {userId}_{courseId}
    match /courseFavorites/{docId} {
      // Allow read if user is authenticated and owns the document
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;

      // Allow create if user is authenticated and creating their own favorite
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['userId', 'courseId', 'courseName', 'location', 'addedAt', 'timesPlayed'])
        && request.resource.data.userId is string
        && request.resource.data.courseId is string
        && request.resource.data.courseName is string
        && request.resource.data.location is string
        && request.resource.data.addedAt is int
        && request.resource.data.timesPlayed is int;

      // Allow update if user owns the document
      allow update: if isSignedIn()
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId; // Prevent userId changes

      // Allow delete if user owns the document
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Course Reviews Collection
    match /courseReviews/{reviewId} {
      // Anyone can read reviews (public information)
      allow read: if true;

      // Users can create reviews for courses they've played
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['courseId', 'userId', 'userName', 'rating', 'difficulty', 'condition', 'value', 'playedDate', 'createdAt', 'helpful'])
        && request.resource.data.rating is int
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5
        && request.resource.data.difficulty is int
        && request.resource.data.difficulty >= 1
        && request.resource.data.difficulty <= 5;

      // Users can update their own reviews
      allow update: if isSignedIn()
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId;

      // Users can delete their own reviews
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Contact Submissions Collection
    // Public contact form - anyone can submit
    match /contactSubmissions/{submissionId} {
      // Allow anyone to create a contact submission (public form)
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'subject', 'message', 'submittedAt', 'status', 'read'])
        && request.resource.data.name is string
        && request.resource.data.email is string
        && request.resource.data.subject is string
        && request.resource.data.message is string
        && request.resource.data.submittedAt is timestamp
        && request.resource.data.status == 'new'
        && request.resource.data.read == false;

      // Only admins can read/update/delete (implement admin check in production)
      // For now, block all reads/updates/deletes from client
      allow read: if false;
      allow update: if false;
      allow delete: if false;
    }

    // Users Collection (for subscription data)
    // Stores user subscription information and other user-specific data
    match /users/{userId} {
      // Users can read their own data
      allow read: if isOwner(userId);

      // Users can create their own user document
      allow create: if isOwner(userId);

      // Users can update their own data
      allow update: if isOwner(userId);

      // Users can delete their own data
      allow delete: if isOwner(userId);
    }
  }
}
