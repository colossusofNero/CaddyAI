# Create .gitignore file
cat > .gitignore << 'EOF'
# Dependencies
node_modules/
/node_modules
/.pnp
.pnp.js

# Testing
/coverage

# Production
/build
/dist

# React Native
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.expo/
.expo-shared/

# iOS
ios/Pods/
ios/build/
*.xcworkspace
*.pbxuser
*.mode1v3
*.mode2v3
*.perspectivev3
*.xcuserstate
*.moved-aside
DerivedData
*.hmap
*.ipa
*.dSYM.zip
*.dSYM

# Android
*.apk
*.aab
android/app/build/
android/build/
android/.gradle/
android/local.properties
*.keystore
!debug.keystore

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Editor
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Excel files (keep original safe)
excel/*.xlsx~
excel/~$*

# API keys and secrets
config/secrets.json
config/api-keys.json
EOF
