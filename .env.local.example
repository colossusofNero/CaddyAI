# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General > Your apps > Web app
# https://console.firebase.google.com

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Stripe Configuration (for subscriptions)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Firebase Admin SDK (for server-side operations)
# REQUIRED for subscription API and webhooks to work
# Generate a service account key from Firebase Console > Project Settings > Service Accounts
# https://console.firebase.google.com/project/YOUR_PROJECT_ID/settings/serviceaccounts/adminsdk

# Option 1: Service Account JSON (Recommended - easier)
FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}'

# Option 2: Individual Variables (Alternative)
# FIREBASE_ADMIN_PROJECT_ID=your_project_id
# FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email
# FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# iGolf Course API Configuration
# Get these credentials from iGolf API access
# https://api.igolf.com
NEXT_PUBLIC_IGOLF_API_KEY=your_igolf_api_key_here
IGOLF_SECRET_KEY=your_igolf_secret_key_here
NEXT_PUBLIC_IGOLF_ENABLED=false

# iGolf Optional Settings
IGOLF_BASE_URL=https://api.igolf.com
IGOLF_CACHE_TTL_DAYS=7
IGOLF_MAX_RESULTS_PER_PAGE=100

# USGA GHIN Scoring API Configuration
# For posting scores to GHIN handicap system
# Uses same credentials as iGolf (same API endpoint)
GHIN_API_KEY=your_ghin_api_key_here
GHIN_SECRET_KEY=your_ghin_secret_key_here
GHIN_BASE_URL=https://api.igolf.com
NEXT_PUBLIC_GHIN_ENABLED=false
